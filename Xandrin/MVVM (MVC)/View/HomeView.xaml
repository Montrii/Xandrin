             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Xandrin.MVVM__MVC_.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="Information"
                   Foreground="White"
                   FontSize="28"
                   TextAlignment="Center"
                   Margin="0,0,0,20">

        </TextBlock>
        <Button Click="Button_Click" Width="260" Height="45" Background="Transparent" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Images/gta_sa.jpg" Stretch="Uniform"/>
                <TextBlock Text="Load GTA:SA" Margin="15 0 0 0" FontSize="20" RenderTransformOrigin="0.527,1.058" Height="29" Foreground="White"/>
            </StackPanel>
        </Button>

    </StackPanel>
</UserControl>
